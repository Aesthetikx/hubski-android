<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/text_view_title"
            android:text="Title"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

    <TextView
            android:id="@+id/text_view_by"
            android:text="by"
            android:paddingLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_view_title" />

    <TextView
            android:id="@+id/text_view_username"
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@+id/text_view_title"
            android:layout_toRightOf="@+id/text_view_by"/>

    <TextView
            android:id="@+id/text_view_age"
            android:text="5 min ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_username"
            android:layout_below="@+id/text_view_title"
            android:layout_margin="2dp"
            android:textColor="#555"/>

    <TextView
            android:id="@+id/text_view_tags"
            android:text="#tags"
            android:textColor="#555"
            android:paddingLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/text_view_by"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" />

    <TextView
            android:id="@+id/text_view_body"
            android:text="Body"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/text_view_tags"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />

</RelativeLayout>